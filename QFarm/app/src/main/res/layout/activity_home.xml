<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hyman="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kai.qfarm.HomeActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >


    </android.support.v4.view.ViewPager>







    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">

        <com.example.kai.qfarm.ChangeColorWithText
            android:id="@+id/tab_1"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="13dp"
            hyman:icon="@mipmap/tab_func_icon"
            hyman:text="@string/tab_func_icon"
            hyman:text_size="12sp"
            hyman:color="#ff304ffe"/>

        <com.example.kai.qfarm.ChangeColorWithText
            android:id="@+id/tab_2"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="13dp"
            hyman:icon="@mipmap/tab_realtime_icon"
            hyman:text="@string/tab_realtime_icon"
            hyman:text_size="12sp"
            hyman:color="#ff304ffe"/>

        <com.example.kai.qfarm.ChangeColorWithText
            android:id="@+id/tab_3"
            android:layout_width="10dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:padding="13dp"
            hyman:icon="@mipmap/tab_me_icon"
            hyman:text="@string/tab_me_icon"
            hyman:text_size="12sp"
            hyman:color="#ff304ffe"/>

    </LinearLayout>


</LinearLayout>
